<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="TBlocks_POC_Zain_WebApplication" verbose="10" parallel="false" thread-count="1">

    <listeners>
        <listener class-name="com.framework.utility.CustomReporterEmailBuildSummary"/>
        <listener class-name="com.framework.utility.CustomReporterforEmail"/>
        <listener class-name="com.framework.utility.CustomReporterListener"/>
    </listeners>

    <test name="Zain_TestScenario :: To perform login, verify Dashboard and Add device from E-Shop">
        <classes>
            <class name="com.Zain.ZainIndex">
                <methods>
                    <include name="testCaseScenario_01"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="BrokenLinks :: To verify broken links of the web page.">
        <classes>
            <class name="com.Zain.BrokenLinks">
                <methods>
                    <include name="testBrokenLinkTestCaseCaseScenario_01"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>